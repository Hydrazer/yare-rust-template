{
  "name": "yare-rust-template",
  "version": "0.1.0",
  "description": "Create yare bots with rust!",
  "main": "bundle.js",
  "scripts": {
    "build": "yarn build:cargo_nomultivalue && yarn build:opt && yarn build:converter && yarn build:bundle",
    "build:cargo_nomultivalue": "cargo rustc --target wasm32-unknown-unknown --release",
    "build:cargo": "cargo rustc --target wasm32-unknown-unknown --release -- -C target-feature=+multivalue",
    "build:opt": "node scripts/opt",
    "build:converter": "node scripts/converter",
    "build:bundle": "rollup -c",
    "build:cleanup": "rimraf ./target",
    "rustformat": "cargo fmt && cargo clippy",
    "postinstall": "rustup toolchain add nightly && rustup target add wasm32-unknown-unknown && rustup component add llvm-tools-preview && rustup update & cargo update & git submodule update --init --recursive && yarn updatewasmconverter",
    "updatewasmconverter": "git submodule update --remote --merge && git submodule init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swz-gh/yare-rust-template.git"
  },
  "author": "swz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swz-gh/yare-rust-template/issues"
  },
  "homepage": "https://github.com/swz-gh/yare-rust-template#readme",
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "minify": "^7.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.51.2",
    "rollup-plugin-terser": "^7.0.2",
    "toml": "^3.0.0"
  }
}
